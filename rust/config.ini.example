# ============================================================================
# Additional Configuration (Optional)
# ============================================================================

[http]
# User agent string (default: Mozilla/5.0...)
# user_agent = Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Request timeout in seconds (default: 10)
# timeout = 10

# Proxy URL (optional)
# proxy = http://127.0.0.1:7890

# SSL verification (default: false for JAV sites)
# verify_ssl = false

[scraping]
# Request more detailed storyline/outline (default: false)
# morestoryline = true

# Enable debug logging (default: false)
# debug = true

# Preferred scrapers (comma-separated, in priority order)
# sources = javdb,javbus,javlibrary,dmm

[processing]
# Default processing mode (1=Scraping, 2=Organizing, 3=Analysis)
# mode = 1

# Link mode (0=Move, 1=Soft link, 2=Hard link)
# link_mode = 0

# Concurrent processing tasks (default: 4)
# concurrent = 4

# Fail on error (default: false)
# fail_on_error = false
